<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/21"
           fx:controller="gitgud.pfm.Controllers.ReportsController"
           fx:id="rootPane"
           style="-fx-background-color: #f0f2f5;">
    
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox fx:id="mainContent" spacing="24" style="-fx-background-color: #f0f2f5;">
            <padding>
                <Insets top="28" right="28" bottom="28" left="28"/>
            </padding>
            
            <!-- Header -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <Label text="Financial Reports" style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #1e293b;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="reportPeriodCombo" value="This Month" style="-fx-font-size: 14px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="This Week"/>
                            <String fx:value="This Month"/>
                            <String fx:value="Last 3 Months"/>
                            <String fx:value="Last 6 Months"/>
                            <String fx:value="This Year"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="exportButton" text="Export Report"
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 600; -fx-padding: 10 20; -fx-background-radius: 6;"/>
            </HBox>
            
            <!-- Summary Cards Row -->
            <HBox spacing="16">
                <!-- Total Income Card -->
                <VBox spacing="8" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Region prefWidth="12" prefHeight="12" style="-fx-background-color: #22c55e; -fx-background-radius: 6;"/>
                        <Label text="Total Income" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                    </HBox>
                    <Label fx:id="totalIncomeLabel" text="0.00" style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #22c55e;"/>
                    <Label fx:id="incomeChangeLabel" text="+0% from last period" style="-fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
                </VBox>
                
                <!-- Total Expenses Card -->
                <VBox spacing="8" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Region prefWidth="12" prefHeight="12" style="-fx-background-color: #ef4444; -fx-background-radius: 6;"/>
                        <Label text="Total Expenses" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                    </HBox>
                    <Label fx:id="totalExpensesLabel" text="0.00" style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #ef4444;"/>
                    <Label fx:id="expenseChangeLabel" text="+0% from last period" style="-fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
                </VBox>
                
                <!-- Net Savings Card -->
                <VBox spacing="8" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Region prefWidth="12" prefHeight="12" style="-fx-background-color: #3b82f6; -fx-background-radius: 6;"/>
                        <Label text="Net Savings" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                    </HBox>
                    <Label fx:id="netSavingsLabel" text="0.00" style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #3b82f6;"/>
                    <Label fx:id="savingsChangeLabel" text="+0% from last period" style="-fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
                </VBox>
                
                <!-- Savings Rate Card -->
                <VBox spacing="8" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Region prefWidth="12" prefHeight="12" style="-fx-background-color: #f59e0b; -fx-background-radius: 6;"/>
                        <Label text="Savings Rate" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                    </HBox>
                    <Label fx:id="savingsRateLabel" text="0%" style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #f59e0b;"/>
                    <Label fx:id="rateChangeLabel" text="+0% from last period" style="-fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
                </VBox>
            </HBox>
            
            <!-- Combined Pie Chart and Category Breakdown -->
            <VBox spacing="16"
                  style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
                <padding>
                    <Insets top="24" right="24" bottom="24" left="24"/>
                </padding>
                <Label text="Spending by Category" style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                
                <HBox spacing="24" alignment="CENTER_LEFT">
                    <!-- Category List Container (scrollable, height-constrained) -->
                    <ScrollPane fitToWidth="true" prefHeight="300" maxHeight="300" HBox.hgrow="ALWAYS"
                                style="-fx-background-color: transparent; -fx-background: transparent; -fx-hbar-policy: never; -fx-vbar-policy: as-needed; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;">
                        <VBox fx:id="categoryBreakdownList" spacing="8">
                            <!-- Category breakdown items will be dynamically added here -->
                        </VBox>
                    </ScrollPane>
                    
                    <!-- Pie Chart Container -->
                    <VBox fx:id="expensePieChartContainer" spacing="8">
                        <!-- Pie chart will be dynamically created -->
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Spending Chart Card -->
        <VBox fx:id="incomeExpenseChartContainer" spacing="8"
                  style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>
            <Label text="Daily Spending/Income" style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
            <!-- Chart will be dynamically created -->
        </VBox>
            

        </VBox>
    </ScrollPane>
</StackPane>
