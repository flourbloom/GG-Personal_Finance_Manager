<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="rootPane" fitToWidth="true" style="-fx-background-color: #f0f2f5; -fx-background: #f0f2f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gitgud.pfm.Controllers.BudgetController">
    
    <VBox spacing="24" style="-fx-background-color: #f0f2f5;">
        <padding>
            <Insets bottom="28" left="28" right="28" top="28" />
        </padding>
        
        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="16">
            <VBox spacing="4">
                <Label style="-fx-font-size: 28px; -fx-font-weight: 700; -fx-text-fill: #1e293b;" text="Budget Management" />
                <Label style="-fx-font-size: 14px; -fx-text-fill: #64748b;" text="Track and manage your monthly spending limits" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addBudgetButton" style="-fx-background-color: linear-gradient(to right, #3b82f6, #2563eb); -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 12 24; -fx-font-size: 15px; -fx-font-weight: 600; -fx-cursor: hand;" text="+ New Budget" />
        </HBox>
        
        <!-- Budgets List Card -->
        <VBox spacing="16" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 3, 0, 0, 1);">
            <padding>
                <Insets bottom="24" left="24" right="24" top="24" />
            </padding>
            
            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                    <Region prefHeight="18" prefWidth="18" style="-fx-background-color: #3b82f6; -fx-background-radius: 4;" />
                    <Label style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;" text="All Budgets" />
                </HBox>
                <ComboBox fx:id="filterCombo" style="-fx-font-size: 13px;" value="All">
                </ComboBox>
            </HBox>
            
            <!-- Budgets List Container -->
            <VBox fx:id="budgetsList" spacing="12">
                <!-- Budget items will be dynamically added here -->
            </VBox>
        </VBox>
    </VBox>
</ScrollPane>
